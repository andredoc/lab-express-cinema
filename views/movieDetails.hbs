<div class="container">
    <div class="row">
        <div class="col-2">
            <img src="{{image}}" alt="movie picture">
        </div>
        <div class="col-10">
            <a href="/movies">Go back</a>
            <h1>{{title}}</h1>
            <h3>Director: {{director}}</h3>
            <h5>Stars</h5>
                <ul>
                    {{#each stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
            
            <p>{{description}}</p>
            <p>{{showtimes}}</p>
        </div>
    </div>
</div>







